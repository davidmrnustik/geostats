<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.geo.geostats"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-permission android:name="android.permission.INTERNET" />

        <uses-sdk
                android:minSdkVersion="8" android:targetSdkVersion="17"
                />

    <application
        android:label="@string/app_name"
        android:icon="@drawable/ic_launcher"
        android:allowBackup="true"
        android:theme="@style/Theme.Sherlock.Light">
        <activity
            	android:name="com.geo.geostats.Intro"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".World"
                  android:label="@string/app_name"
                  android:parentActivityName="com.geo.geostats.Intro">
            <intent-filter>
                <action android:name="com.geo.geostats.WORLD"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <meta-data
            	android:name="android.support.PARENT_ACTIVITY"
            	android:value="com.geo.geostats.Intro" />
        </activity>
        <activity android:name=".Continents"
          		  android:theme="@style/Theme.PageIndicatorDefaults"
                  android:label="@string/app_name"
                  android:parentActivityName="com.geo.geostats.Intro">
            <intent-filter>
                <action android:name="com.geo.geostats.CONTINENTS"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <meta-data
            	android:name="android.support.PARENT_ACTIVITY"
            	android:value="com.geo.geostats.Intro" />
        </activity>
        <activity android:name=".Oceans"
          		  android:theme="@style/Theme.PageIndicatorDefaults"
                  android:label="@string/app_name"
                  android:parentActivityName="com.geo.geostats.Intro">
            <intent-filter>
                <action android:name="com.geo.geostats.OCEANS"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <meta-data
            	android:name="android.support.PARENT_ACTIVITY"
            	android:value="com.geo.geostats.Intro" />
        </activity>
    </application>
</manifest>
