<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
	<ScrollView
	    style="@style/ScrollView">
		
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:orientation="vertical">
	    
		    <TableLayout style="@style/TableLayout"
		        android:shrinkColumns="0">
		        
		        <TableRow style="@style/TableRow">
			        <TextView 
			          	style="@style/TableTextView"
			            android:text="@string/Population"/>
			        <TextView 
			            style="@style/TableTextView.GravityRight"
			            android:text="@string/PopulationRecordEurope"/>
			    </TableRow>
			    <TableRow style="@style/TableRow">
			        <TextView 
			          	style="@style/TableTextView"
			            android:text="@string/PercentOfPopulation"/>
			        <TextView 
			            style="@style/TableTextView.GravityRight"
			            android:text="@string/PercentOfPopulationRecordEurope"/>
			    </TableRow>
			    <TableRow style="@style/TableRow">
			        <TextView 
			          	style="@style/TableTextView"
			            android:text="@string/DensitySqKm"/>
			        <TextView 
			            style="@style/TableTextView.GravityRight"
			            android:text="@string/DensitySqKmRecordEurope"/>
			    </TableRow>
		    </TableLayout>
		    
		    <View 
		        style="@style/ViewDivider"/>
		    
		    <TableLayout style="@style/TableLayout"
		        android:shrinkColumns="0">
		        
			    <TableRow style="@style/TableRow">
			        <TextView 
			          	style="@style/TableTextView.Head"
			            android:text="@string/MostPopulatedCountries"/>
			        <TextView 
			            style="@style/TableTextView.Head"
			            android:text="@string/Total"/>
			    </TableRow>
			    
			    <TableRow style="@style/TableRow">
			        <TextView 
			          	style="@style/TableTextView"
			            android:text="@string/Russia"/>
			        <TextView 
			            style="@style/TableTextView.GravityRight"
			            android:text="@string/MostPopulatedCountriesEurope01"/>
			    </TableRow>
			    <TableRow style="@style/TableRow">
			        <TextView 
			          	style="@style/TableTextView"
			            android:text="@string/Germany"/>
			        <TextView 
			            style="@style/TableTextView.GravityRight"
			            android:text="@string/MostPopulatedCountriesEurope02"/>
			    </TableRow>
			    <TableRow style="@style/TableRow">
			        <TextView 
			          	style="@style/TableTextView"
			            android:text="@string/France"/>
			        <TextView 
			            style="@style/TableTextView.GravityRight"
			            android:text="@string/MostPopulatedCountriesEurope03"/>
			    </TableRow>
			    <TableRow style="@style/TableRow">
			        <TextView 
			          	style="@style/TableTextView"
			            android:text="@string/UnitedKingdom"/>
			        <TextView 
			            style="@style/TableTextView.GravityRight"
			            android:text="@string/MostPopulatedCountriesEurope04"/>
			    </TableRow>
			    <TableRow style="@style/TableRow">
			        <TextView 
			          	style="@style/TableTextView"
			            android:text="@string/Italy"/>
			        <TextView 
			            style="@style/TableTextView.GravityRight"
			            android:text="@string/MostPopulatedCountriesEurope05"/>
			    </TableRow>
			    <TableRow style="@style/TableRow">
			        <TextView 
			          	style="@style/TableTextView"
			            android:text="@string/Spain"/>
			        <TextView 
			            style="@style/TableTextView.GravityRight"
			            android:text="@string/MostPopulatedCountriesEurope06"/>
			    </TableRow>
			    <TableRow style="@style/TableRow">
			        <TextView 
			          	style="@style/TableTextView"
			            android:text="@string/Ukraine"/>
			        <TextView 
			            style="@style/TableTextView.GravityRight"
			            android:text="@string/MostPopulatedCountriesEurope07"/>
			    </TableRow>
			    <TableRow style="@style/TableRow">
			        <TextView 
			          	style="@style/TableTextView"
			            android:text="@string/Poland"/>
			        <TextView 
			            style="@style/TableTextView.GravityRight"
			            android:text="@string/MostPopulatedCountriesEurope08"/>
			    </TableRow>
			    <TableRow style="@style/TableRow">
			        <TextView 
			          	style="@style/TableTextView"
			            android:text="@string/Romania"/>
			        <TextView 
			            style="@style/TableTextView.GravityRight"
			            android:text="@string/MostPopulatedCountriesEurope09"/>
			    </TableRow>
			    <TableRow style="@style/TableRow">
			        <TextView 
			          	style="@style/TableTextView"
			            android:text="@string/Netherlands"/>
			        <TextView 
			            style="@style/TableTextView.GravityRight"
			            android:text="@string/MostPopulatedCountriesEurope10"/>
			    </TableRow>
			</TableLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>