<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000"
    android:orientation="vertical" >
    
    <TableLayout style="@style/TableLayout"
	        android:shrinkColumns="0">
		    
		    <TableRow style="@style/TableRow">
		        <TextView 
		          	style="@style/TableTextView"
		            android:text="@string/TotalLandArea"/>
		        <TextView 
		            style="@style/TableTextView.GravityRight"
		            android:text="@string/TotalLandAreaRecordEurope"/>
		    </TableRow>
		    <TableRow style="@style/TableRow">
		        <TextView 
		          	style="@style/TableTextView"
		            android:text="@string/Volume"/>
		        <TextView 
		            style="@style/TableTextView.GravityRight"
		            android:text="@string/VolumeRecordEurope"/>
		    </TableRow>
		    <TableRow style="@style/TableRow">
		        <TextView 
		          	style="@style/TableTextView"
		            android:text="@string/Population"/>
		        <TextView 
		            style="@style/TableTextView.GravityRight"
		            android:text="@string/PopulationRecordEurope"/>
		    </TableRow>
		    <TableRow style="@style/TableRow">
		        <TextView 
		          	style="@style/TableTextView"
		            android:text="@string/PercentOfPopulation"/>
		        <TextView 
		            style="@style/TableTextView.GravityRight"
		            android:text="@string/PercentOfPopulationRecordEurope"/>
		    </TableRow>
		    <TableRow style="@style/TableRow">
		        <TextView 
		          	style="@style/TableTextView"
		            android:text="@string/DensitySqKm"/>
		        <TextView 
		            style="@style/TableTextView.GravityRight"
		            android:text="@string/DensitySqKmRecordEurope"/>
		    </TableRow>
		    <TableRow style="@style/TableRow">
		        <TextView 
		          	style="@style/TableTextView"
		            android:text="@string/NumberOfCountries"/>
		        <TextView 
		            style="@style/TableTextView.GravityRight"
		            android:text="@string/NumberOfCountriesRecordEurope"/>
		    </TableRow>
		    
		    <TableRow style="@style/TableRow">
		        <TextView 
		          	style="@style/TableTextView.Head"
		            android:text="@string/TopicName"/>
		        <TextView 
		            style="@style/TableTextView.Head"
		            android:text="@string/Value"/>
		    </TableRow>
		    
		    <TableRow
		        style="@style/TableRow.Span">
		        <TextView 
		            style="@style/TableTextView.Bold"
		            android:layout_span="2"
		            android:text="@string/HighestPoint"/>
		    </TableRow>
		    <TableRow style="@style/TableRow">
		        <TextView 
		          	style="@style/TableTextView.RowSpan"
		            android:text="@string/Elbrus"/>
		        <TextView 
		            style="@style/TableTextView.GravityRight.RowSpan"
		            android:text="@string/HighestPointRecord1Europe"/>
		    </TableRow>
		    <TableRow
		        style="@style/TableRow.Span">
		        <TextView 
		            style="@style/TableTextView.Bold"
		            android:layout_span="2"
		            android:text="@string/LowestPoint"/>
		    </TableRow>
		    <TableRow style="@style/TableRow">
		        <TextView 
		          	style="@style/TableTextView.RowSpan"
		            android:text="@string/CaspianSea"/>
		        <TextView 
		            style="@style/TableTextView.GravityRight.RowSpan"
		            android:text="@string/LowestPointRecordEurope"/>
		    </TableRow>
		    <TableRow
		        style="@style/TableRow.Span">
		        <TextView 
		            style="@style/TableTextView.Bold"
		            android:layout_span="2"
		            android:text="@string/HighestTemp"/>
		    </TableRow>
		    <TableRow style="@style/TableRow">
		        <TextView 
		          	style="@style/TableTextView.RowSpan"
		            android:text="@string/AthensGreece"/>
		        <TextView 
		            style="@style/TableTextView.GravityRight.RowSpan"
		            android:text="@string/TempHighestEurope"/>
		    </TableRow>
		    <TableRow
		        style="@style/TableRow.Span">
		        <TextView 
		            style="@style/TableTextView.Bold"
		            android:layout_span="2"
		            android:text="@string/LowestTemp"/>
		    </TableRow>
		    <TableRow style="@style/TableRow">
		        <TextView 
		          	style="@style/TableTextView.RowSpan"
		            android:text="@string/UstShchugerRussia"/>
		        <TextView 
		            style="@style/TableTextView.GravityRight.RowSpan"
		            android:text="@string/TempLowestEurope"/>
		    </TableRow>
		</TableLayout>
    
    <com.viewpagerindicator.TabPageIndicator
        android:id="@+id/indicator"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        />
    
    <android.support.v4.view.ViewPager
        android:id="@+android:id/viewpager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
