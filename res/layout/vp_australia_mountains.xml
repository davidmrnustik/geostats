			            style="@style/TableTextView.GravityRight"
			            android:text="@string/HighestMountainsAustraliaAP01"/>
			    </TableRow>
			    <TableRow style="@style/TableRow">
			        <TextView 
			          	style="@style/TableTextView"
			            android:text="@string/PuncakTrikora"/>
