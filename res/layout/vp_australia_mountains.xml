			            style="@style/TableTextView.GravityRight"
			            android:text="@string/HighestMountainsAustraliaAP04"/>
			    </TableRow>
			    <TableRow style="@style/TableRow">
			        <TextView 
			          	style="@style/TableTextView"
			            android:text="@string/MtWilhelm"/>
			        <TextView 
			            style="@style/TableTextView.GravityRight"
			            android:text="@string/HighestMountainsAustraliaAP05"/>
			    </TableRow>
			</TableLayout>
			
		    <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/AustralianContinent"
	            android:textColor="@color/colorFFF"
	            android:layout_marginTop="12dp"
	            android:layout_marginBottom="8dp"/>
		    
		    <TableLayout style="@style/TableLayout"
		        android:shrinkColumns="0">
		        
			    <TableRow style="@style/TableRow">
